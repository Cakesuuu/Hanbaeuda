<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frag_reading"
    android:background="@color/bg_color"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/reading_basics_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/reading_basics_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/bm_yeonsung"
            android:text="Reading Basics"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/reading_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_btn_standard_height"
            android:fontFamily="@font/bm_yeonsung"
            android:gravity="center"
            android:text="Reading Order"
            android:textAllCaps="false"
            android:textSize="30sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/syllableblock6"
            app:iconGravity="textEnd"
            app:iconSize="100dp" />

        <TextView
            android:id="@+id/advanced_reading_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/bm_yeonsung"
            android:text="Advanced Reading"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/batchim_button"
            style="widget.MaterialComponents.button.Icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_btn_standard_height"
            android:fontFamily="@font/bm_yeonsung"
            android:gravity="center"
            android:text="Batchim (받침)"
            android:textAllCaps="false"
            android:textSize="36sp"
            app:cornerRadius="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/bm_yeonsung"
            android:text="Practice Reading Here!"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/reading_exercise_1"
            style="widget.MaterialComponents.button.Icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_btn_standard_height"
            android:fontFamily="@font/bm_yeonsung"
            android:gravity="center"
            android:text="Reading Exercises"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/bm_yeonsung"
            android:text="Final Test"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm_plex_sans_sb"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:text="Have you finished all the topics?\nTry out a full test here!"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/start_reading_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ye_bgcolor"
                android:fontFamily="@font/ibm_plex_sans_sb"
                android:text="Start Reading Test"
                android:textColor="@color/black"
                app:cornerRadius="5dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>