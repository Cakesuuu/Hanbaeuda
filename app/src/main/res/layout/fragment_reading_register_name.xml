<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:id="@+id/directions_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/corner_background"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/ibm_plex_sans_sb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quiz Directions:"/>

            <TextView
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/ibm_plex_sans_sb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quiz_directions"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm_plex_sans_sb"
                android:text="Please enter your name!"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/white">

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_editable"
                    android:hint="Type your name here!"
                    android:textColor="@color/white"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/register_name_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ye_bgcolor"
                android:text="START"
                android:textColor="@color/black"
                android:fontFamily="@font/ibm_plex_sans_sb"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>