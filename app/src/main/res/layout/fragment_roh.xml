<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frag_roh"
    android:background="@color/bg_color"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bm_yeonsung"
            android:text="Writing Rules"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintEnd_toEndOf="@id/writingBasics"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/writingBasics"
            app:layout_constraintBottom_toTopOf="@id/writingBasics"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:id="@+id/writingBasics"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/syllable_blocks"
                style="widget.MaterialComponents.button.Icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_btn_standard_height"
                android:fontFamily="@font/bm_yeonsung"
                android:gravity="center"
                android:text="Syllable Blocks"
                android:textAllCaps="false"
                android:textSize="30sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/syllableblock6"
                app:iconGravity="textEnd"
                app:iconSize="100dp"/>

            <Button
                android:id="@+id/the_letter_o"
                style="widget.MaterialComponents.button.Icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_btn_standard_height"
                android:fontFamily="@font/bm_yeonsung"
                android:gravity="center"
                android:paddingStart="40dp"
                android:text="The letter "
                android:textAllCaps="false"
                android:textSize="34sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/o"
                app:iconGravity="textEnd"
                app:iconPadding="-15dp"
                app:iconSize="100dp"
                app:iconTint="@null"/>

            <Button
                android:id="@+id/vowels_general_button"
                style="widget.MaterialComponents.button.Icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_btn_standard_height"
                android:fontFamily="@font/bm_yeonsung"
                android:gravity="center"
                android:text="Vowels\nRules"
                android:textAllCaps="false"
                android:textSize="34sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/verticalvowels"
                app:iconGravity="textEnd"
                app:iconSize="100dp"
                app:iconPadding="20dp"
                app:iconTint="@null"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bm_yeonsung"
            android:text="Reading Rules"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintEnd_toEndOf="@id/reading_basics"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/reading_basics"
            app:layout_constraintBottom_toTopOf="@id/reading_basics"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:id="@+id/reading_basics"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/writingBasics"
            app:layout_constraintStart_toStartOf="@id/writingBasics"
            app:layout_constraintEnd_toEndOf="@id/writingBasics">

            <Button
                android:id="@+id/reading_order"
                style="widget.MaterialComponents.button.Icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_btn_standard_height"
                android:fontFamily="@font/bm_yeonsung"
                android:gravity="center"
                android:text="Reading Order"
                android:textAllCaps="false"
                android:textSize="30sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/syllableblock6"
                app:iconGravity="textEnd"
                app:iconSize="100dp"/>

            <Button
                android:id="@+id/batchim_button"
                style="widget.MaterialComponents.button.Icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_btn_standard_height"
                android:fontFamily="@font/bm_yeonsung"
                android:gravity="center"
                android:text="Batchim (받침)"
                android:textAllCaps="false"
                android:textSize="36sp"
                app:cornerRadius="10dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>