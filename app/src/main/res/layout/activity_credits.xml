<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Credits"
    android:background="@color/bg_color"
    android:fillViewport="true"
    android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Development Team"
                android:background="@drawable/menu_textlines"
                android:fontFamily="@font/ibm_plex_sans_sb"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/corner_background"
                android:padding="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:justificationMode="inter_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Development Background"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibm_plex_sans_sb"/>

                <TextView
                    android:justificationMode="inter_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/credit_description"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibm_plex_sans_sb"/>

            </LinearLayout>

            <TextView
                android:justificationMode="inter_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Development Team"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ibm_plex_sans_sb"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center|top"
                android:orientation="vertical"
                android:background="@drawable/corner_background"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:justificationMode="inter_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Leader"
                    android:textSize="20dp"
                    android:layout_marginTop="-10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibm_plex_sans_sb"/>

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/zedrick"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Cydrex H. Vitug"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibm_plex_sans_sb"
                    android:textSize="20sp"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="Lead Programmer - Lead Designer\nLesson Planner - Content Researcher"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibm_plex_sans_sb"
                    android:textSize="11dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center|top"
                android:orientation="vertical"
                android:background="@drawable/corner_background"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/jonald"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jonald Huab"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibm_plex_sans_sb"
                    android:textSize="20sp"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="Lesson Planner - Layout Designer"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibm_plex_sans_sb"
                    android:textSize="11dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center|top"
                android:orientation="vertical"
                android:background="@drawable/corner_background"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/cjonn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cjonn Cayetano"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibm_plex_sans_sb"
                    android:textSize="20sp"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="Reference Material Gathering - Content Researcher"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibm_plex_sans_sb"
                    android:textSize="11dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center|top"
                android:orientation="vertical"
                android:background="@drawable/corner_background"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/zhai"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zhailane Murawski"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibm_plex_sans_sb"
                    android:textSize="20sp"/>

                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:text="Layout Designer - Reference Material Gathering"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ibm_plex_sans_sb"
                    android:textSize="11dp"/>

            </LinearLayout>

            <TextView
                android:justificationMode="inter_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Thank you! -"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/ibm_plex_sans_sb"/>

    </LinearLayout>

</ScrollView>